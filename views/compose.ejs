<%- include("partials/header") %>
<h1>Compose</h1><br>
<form action="/compose" method="post">
    <div class="mb-3">
        <label>Title</label>
        <input class="form-control" name="postTitle" type="text" placeholder="Enter title" required><br>
        <label>Post</label>
        <textarea class="form-control" rows="5" cols="30" name="postContent" placeholder="Enter post"
            required></textarea><br>
    </div>
    <button class="btn btn-primary" name="publish" type="submit">Publish</button>
</form>
<%- include("partials/footer") %>